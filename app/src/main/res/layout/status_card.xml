<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/status_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:columnCount="3"
        android:rowCount="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="6"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:gravity="center_horizontal"
            android:text="@string/card_user"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xxl"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:gravity="center_horizontal"
            android:text="@string/card_status"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xxxl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:gravity="center"
            android:text="Time"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xxl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:gravity="center_horizontal"
        android:text="1329min"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_xxl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:gravity="center_horizontal"
            android:text="WiFi: bjut_wifi"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xxl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_row="2"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xxl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:gravity="center_horizontal"
            android:text="Used Flux: 9999.99MB"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_xxl" />

        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="fill_horizontal"
            android:layout_row="4"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/sign_in_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:minWidth="60dp"
                android:text="@string/action_login" />

            <Button
                android:id="@+id/sign_out_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:minWidth="60dp"
                android:text="@string/action_logout" />

            <Button
                android:id="@+id/refresh_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="0dp"
                android:minWidth="60dp"
                android:text="@string/action_sync" />
        </LinearLayout>

    </GridLayout>


</android.support.v7.widget.CardView>